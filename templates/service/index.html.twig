{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
<div class="container mt-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">
                <i class="fas fa-concierge-bell me-1"></i> Liste des services
            </li>
        </ol>
    </nav>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="h5 mb-0">
                <i class="fas fa-cogs me-2"></i> Liste des services
            </h2>
            <a href="{{ path('app_service_new') }}" class="btn btn-light btn-sm">
                <i class="fas fa-plus me-1"></i> Nouveau service
            </a>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Prix horaire (€)</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for service in services %}
                            <tr>
                                <td>{{ service.id }}</td>
                                <td>{{ service.nom }}</td>
                                <td>{{ service.description }}</td>
                                <td>{{ service.prixHoraire }}</td>
                                <td class="text-end">
                                    <a href="{{ path('app_service_show', {'id': service.id}) }}" class="btn btn-sm btn-outline-primary me-2">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_service_edit', {'id': service.id}) }}" class="btn btn-sm btn-outline-secondary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="fas fa-info-circle me-2"></i> Aucun service trouvé.
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
