{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
    <section class="section">
        <div class="container">
            <nav class="breadcrumb mb-5" aria-label="breadcrumbs">
                <ul>
                    <li class="is-active">
                        <a href="#" aria-current="page">
                            <span class="icon"><i class="fas fa-concierge-bell"></i></span>
                            <span>Services</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="box">
                <div class="level mb-4">
                    <div class="level-left">
                        <h1 class="title is-4">
                            <span class="icon-text">
                                <span class="icon"><i class="fas fa-cogs"></i></span>
                                <span>Liste des services</span>
                            </span>
                        </h1>
                    </div>
                    <div class="level-right">
                        <a href="{{ path('app_service_new') }}" class="button is-primary">
                            <span class="icon">
                                <i class="fas fa-plus"></i>
                            </span>
                            <span>Nouveau service</span>
                        </a>
                    </div>
                </div>                <div class="table-container">
                    <table class="table is-fullwidth is-striped is-hoverable">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom</th>
                                <th>Description</th>
                                <th>Prix horaire (€)</th>
                                <th class="has-text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for service in services %}
                                <tr>
                                    <td>{{ service.id }}</td>
                                    <td>{{ service.nom }}</td>
                                    <td>{{ service.description }}</td>
                                    <td>{{ service.prixHoraire }}</td>
                                    <td class="has-text-right">
                                        <div class="buttons is-right">
                                            <a href="{{ path('app_service_show', {'id': service.id}) }}" 
                                               class="button is-small is-info is-light">
                                                <span class="icon">
                                                    <i class="fas fa-eye"></i>
                                                </span>
                                            </a>
                                            <a href="{{ path('app_service_edit', {'id': service.id}) }}" 
                                               class="button is-small is-primary is-light">
                                                <span class="icon">
                                                    <i class="fas fa-edit"></i>
                                                </span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="has-text-centered">
                                        <p class="has-text-grey py-6">
                                            <span class="icon">
                                                <i class="fas fa-info-circle"></i>
                                            </span>
                                            Aucun service trouvé
                                        </p>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
