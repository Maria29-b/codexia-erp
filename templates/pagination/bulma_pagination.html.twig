{% extends '@KnpPaginator/Pagination/sliding.html.twig' %}

{% block pagination %}
    {% if pageCount > 1 %}
        <nav class="pagination is-centered" role="navigation" aria-label="pagination">

            {# Previous Page #}
            {% if previous is defined %}
                <a class="pagination-previous" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">Précédent</a>
            {% else %}
                <a class="pagination-previous" disabled>Précédent</a>
            {% endif %}

            {# Next Page #}
            {% if next is defined %}
                <a class="pagination-next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">Suivant</a>
            {% else %}
                <a class="pagination-next" disabled>Suivant</a>
            {% endif %}

            <ul class="pagination-list">
                {% for page in pagesInRange %}
                    {% if page != current %}
                        <li>
                            <a class="pagination-link"
                               href="{{ path(route, query|merge({(pageParameterName): page})) }}"
                               aria-label="Aller à la page {{ page }}">
                                {{ page }}
                            </a>
                        </li>
                    {% else %}
                        <li>
                            <a class="pagination-link is-current" aria-current="page">{{ page }}</a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </nav>
    {% endif %}
{% endblock %}