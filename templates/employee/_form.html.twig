{% extends 'base.html.twig' %}

{% block title %}Créer un client{% endblock %}

{% block body %}
{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.prenom) }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control' ~ (form.prenom.vars.valid ? '' : ' is-invalid')}}) }}
                {{ form_errors(form.prenom) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control' ~ (form.nom.vars.valid ? '' : ' is-invalid')}}) }}
                {{ form_errors(form.nom) }}
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control' ~ (form.email.vars.valid ? '' : ' is-invalid')}}) }}
                {{ form_errors(form.email) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.zoneIntervention) }}
                {{ form_widget(form.zoneIntervention, {'attr': {'class': 'form-control' ~ (form.zoneIntervention.vars.valid ? '' : ' is-invalid')}}) }}
                {{ form_errors(form.zoneIntervention) }}
                <div class="form-text">Zone géographique d'intervention (optionnel)</div>
            </div>
        </div>
    </div>

    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
{% endblock %}