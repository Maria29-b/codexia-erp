{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div class="columns">
                <div class="column is-half">
                    <div class="field">
                        {{ form_label(form.prenom, null, {'label_attr': {'class': 'label'}}) }}
                        <div class="control">
                            {{ form_widget(form.prenom, {
                                'attr': {
                                    'class': 'input' ~ (form.prenom.vars.valid ? '' : ' is-danger')
                                }
                            }) }}
                        </div>
                        {% if not form.prenom.vars.valid %}
                            <p class="help is-danger">{{ form_errors(form.prenom) }}</p>
                        {% endif %}
                    </div>

                    <div class="field">
                        {{ form_label(form.nom, null, {'label_attr': {'class': 'label'}}) }}
                        <div class="control">
                            {{ form_widget(form.nom, {
                                'attr': {
                                    'class': 'input' ~ (form.nom.vars.valid ? '' : ' is-danger')
                                }
                            }) }}
                        </div>
                        {% if not form.nom.vars.valid %}
                            <p class="help is-danger">{{ form_errors(form.nom) }}</p>
                        {% endif %}
                    </div>
                </div>

                <div class="column is-half">
                    <div class="field">
                        {{ form_label(form.email, null, {'label_attr': {'class': 'label'}}) }}
                        <div class="control">
                            {{ form_widget(form.email, {
                                'attr': {
                                    'class': 'input' ~ (form.email.vars.valid ? '' : ' is-danger')
                                }
                            }) }}
                        </div>
                        {% if not form.email.vars.valid %}
                            <p class="help is-danger">{{ form_errors(form.email) }}</p>
                        {% endif %}
                    </div>

                    <div class="field">
                        {{ form_label(form.zoneIntervention, null, {'label_attr': {'class': 'label'}}) }}
                        <div class="control">
                            {{ form_widget(form.zoneIntervention, {
                                'attr': {
                                    'class': 'input' ~ (form.zoneIntervention.vars.valid ? '' : ' is-danger')
                                }
                            }) }}
                        </div>
                        {% if not form.zoneIntervention.vars.valid %}
                            <p class="help is-danger">{{ form_errors(form.zoneIntervention) }}</p>
                        {% endif %}
                        <p class="help">Zone g√©ographique d'intervention (optionnel)</p>
                    </div>
                </div>
            </div>

            <div class="field is-grouped mt-4">
                <div class="control">
                    <button class="button is-primary">{{ button_label|default('Enregistrer') }}</button>
                </div>
            </div>            {{ form_end(form) }}
