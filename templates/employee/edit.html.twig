{% extends 'base.html.twig' %}

{% block title %}Modifier l'employé{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
{% endblock %}

{% block body %}
    <section class="section">
        <div class="container">
            <nav class="breadcrumb" aria-label="breadcrumbs">
                <ul>
                    <li><a href="{{ path('app_employee_index') }}">Employés</a></li>
                    <li><a href="{{ path('app_employee_show', {'id': employee.id}) }}">{{ employee.prenom }} {{ employee.nom }}</a></li>
                    <li class="is-active"><a href="#" aria-current="page">Modifier</a></li>
                </ul>
            </nav>

            <div class="box">
                <h2 class="title is-4">Modifier l'employé</h2>

                {{ include('employee/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

                <div class="is-flex is-justify-content-space-between mt-4">
                    {{ include('employee/_delete_form.html.twig') }}
                    <a href="{{ path('app_employee_index') }}" class="button is-light">
                        <span>Retour à la liste</span>
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
