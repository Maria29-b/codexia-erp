{% extends 'base.html.twig' %}

{% block title %}Modifier l'employé{% endblock %}

{% block body %}
<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_employee_index') }}">Employés</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_employee_show', {'id': employee.id}) }}">{{ employee.prenom }} {{ employee.nom }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">Modifier</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header">
            <h2>Modifier l'employé</h2>
        </div>
        <div class="card-body">
            {{ include('employee/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
        <div class="card-footer">
            <div class="btn-group">
                {{ include('employee/_delete_form.html.twig') }}
                <a href="{{ path('app_employee_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}