{% extends 'base.html.twig' %}

{% block title %}Liste des employés{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des employés</h1>
        <a href="{{ path('app_employee_new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Ajouter un employé
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom complet</th>
                        <th>Email</th>
                        <th>Zone d'intervention</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for employee in employees %}
                    <tr>
                        <td>{{ employee.id }}</td>
                        <td>{{ employee.prenom }} {{ employee.nom }}</td>
                        <td>{{ employee.email }}</td>
                        <td>{{ employee.zoneIntervention }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_employee_show', {'id': employee.id}) }}" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_employee_edit', {'id': employee.id}) }}" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucun employé trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}