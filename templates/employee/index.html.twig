{% extends 'base.html.twig' %}

{% block title %}Mes prestations{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Mes prestations assignées</h1>
        
        <div class="card mt-4">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button" role="tab" aria-controls="upcoming" aria-selected="true">À venir</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button" role="tab" aria-controls="completed" aria-selected="false">Terminées</button>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Client</th>
                                    <th>Service</th>
                                    <th>Date</th>
                                    <th>Adresse</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for prestation in upcoming_prestations %}
                                    <tr>
                                        <td>{{ prestation.client.nom }}</td>
                                        <td>{{ prestation.service.nom }}</td>
                                        <td>{{ prestation.date|date('d/m/Y H:i') }}</td>
                                        <td>{{ prestation.adresse }}</td>
                                        <td>
                                            <span class="badge bg-{{ prestation.statut == 'Planifiée' ? 'warning' : 'primary' }}">
                                                {{ prestation.statut }}
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="{{ path('app_prestation_details', {'id': prestation.id}) }}" class="btn btn-sm btn-info">Détails</a>
                                                <a href="{{ path('app_prestation_start', {'id': prestation.id}) }}" class="btn btn-sm btn-success">Démarrer</a>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6">Aucune prestation à venir</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="completed" role="tabpanel" aria-labelledby="completed-tab">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Client</th>
                                    <th>Service</th>
                                    <th>Date</th>
                                    <th>Durée</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for prestation in completed_prestations %}
                                    <tr>
                                        <td>{{ prestation.client.nom }}</td>
                                        <td>{{ prestation.service.nom }}</td>
                                        <td>{{ prestation.date|date('d/m/Y H:i') }}</td>
                                        <td>{{ prestation.duree }} minutes</td>
                                        <td>
                                            <span class="badge bg-success">
                                                {{ prestation.statut }}
                                            </span>
                                        </td>
                                        <td>
                                            <a href="{{ path('app_prestation_details', {'id': prestation.id}) }}" class="btn btn-sm btn-info">Détails</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6">Aucune prestation terminée</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}