{% extends 'base.html.twig' %}

{% block title %}Modifier {{ client.prenom }} {{ client.nom }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_client_index') }}">
                    <i class="fas fa-users me-1"></i> Clients
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_client_show', {'id': client.id}) }}">
                    <i class="fas fa-user me-1"></i> {{ client.prenom }} {{ client.nom }}
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <i class="fas fa-edit me-1"></i> Modification
            </li>
        </ol>
    </nav>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="h5 mb-0">
                    <i class="fas fa-user-edit me-2"></i>
                    Modifier {{ client.prenom }} {{ client.nom }}
                </h2>
                <div class="badge bg-light text-dark">
                    ID: {{ client.id }}
                </div>
            </div>
        </div>
        
        <div class="card-body">
            {{ include('client/_form.html.twig', {
                'button_label': 'Mettre à jour',
                'button_icon': 'save'
            }) }}
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between">
                <a href="{{ path('app_client_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                </a>
                
                <div class="btn-group">
                    <a href="{{ path('app_client_show', {'id': client.id}) }}" 
                       class="btn btn-info"
                       title="Voir les détails">
                        <i class="fas fa-eye"></i>
                    </a>
                    {{ include('client/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}