{% extends 'base.html.twig' %}

{% block title %}Nouveau client{% endblock %}

{% block body %}
<div class="container mt-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_client_index') }}" class="text-decoration-none">
                    <i class="fas fa-users me-1"></i> Liste des clients
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <i class="fas fa-user-plus me-1"></i> Nouveau client
            </li>
        </ol>
    </nav>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="h5 mb-0">
                    <i class="fas fa-user-plus me-2"></i>
                    Création d'un nouveau client
                </h2>
            </div>
        </div>

        <div class="card-body">
            {{ include('client/_form.html.twig', {
                'button_label': 'Enregistrer le client',
                'button_icon': 'save'
            }) }}
        </div>

        <div class="card-footer bg-light">
            <a href="{{ path('app_client_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Retour à la liste
            </a>
        </div>
    </div>
</div>
{% endblock %}