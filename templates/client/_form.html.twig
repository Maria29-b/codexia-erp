{% extends 'base.html.twig' %}
{% block title %}Formulaire de Prestation{% endblock %}
{% block body %}
{{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.prenom) }}
            {{ form_row(form.nom) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.email) }}
            {{ form_row(form.telephone) }}
        </div>
    </div>
    {{ form_row(form.zoneIntervention) }}
    
    <button class="btn btn-primary">
        <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
    </button>
{{ form_end(form) }}
{% endblock %}